<Window
    x:Class="Contacts.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Contacts"
    Width="613"
    Height="400"
    Icon="Resources/contacts_96x96.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!--  Левая колонка  -->
        <Grid Grid.Column="0" Background="#f8f8f8">
            <Border Padding="8" Background="{x:Null}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!--  Поле поиска  -->
                    <Grid Grid.Row="0" Margin="3 3 5 3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Content="Find:"/>
                        <TextBox
                            Grid.Column="1"
                            Height="20"
                            MinWidth="50"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            IsReadOnly="True"/>
                    </Grid>

                    <!--  Таблица контактов  -->
                    <DataGrid
                        x:Name="ContactsGrid"
                        Grid.Row="1"
                        Margin="3 7 3 3"
                        AutoGenerateColumns="False"
                        IsReadOnly="True"/>

                    <!--  Кнопки управления  -->
                    <Grid Grid.Row="2" Margin="3 3 3 3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button
                            Grid.Column="0"
                            Height="25"
                            Margin="3"
                            Content="Add"/>
                        <Button
                            Grid.Column="1"
                            Height="25"
                            Margin="3"
                            Content="Edit"/>
                        <Button
                            Grid.Column="2"
                            Height="25"
                            Margin="3"
                            Content="Remove"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!--  Разделитель колонок  -->
        <GridSplitter
            Grid.Column="1"
            Width="3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="White"
            ResizeBehavior="PreviousAndNext"
            ResizeDirection="Columns"/>

        <!--  Правая колонка  -->
        <Grid Grid.Column="2" Background="White">
            <Border Margin="8" Background="{x:Null}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>

                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--  Фото контакта  -->
                    <Image
                        Grid.Row="0"
                        Grid.RowSpan="3"
                        Grid.Column="0"
                        Width="100"
                        Height="100"
                        Margin="1 23 7 29"
                        Source="/Resources/photo_placeholder_100x100.png"/>

                    <StackPanel
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="3"
                        Orientation="Vertical">
                        <TextBlock Text="Name:"/>
                        <TextBox
                            Margin="0 3 0 0"
                            IsReadOnly="True"
                            Text="{Binding SelectedContact.Name}"/>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="3"
                        Orientation="Vertical">
                        <TextBlock Text="Phone Number:"/>
                        <TextBox
                            Margin="0 3 0 0"
                            IsReadOnly="True"
                            Text="{Binding SelectedContact.PhoneNumber}"/>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="3"
                        Orientation="Vertical">
                        <TextBlock Text="Email:"/>
                        <TextBox
                            Margin="0 3 0 0"
                            IsReadOnly="True"
                            Text="{Binding SelectedContact.Email}"/>
                    </StackPanel>

                    <!--  Кнопка "Apply"  -->
                    <Button
                        Grid.Row="4"
                        Grid.Column="1"
                        Width="75"
                        Height="25"
                        Margin="0 50 0 0"
                        HorizontalAlignment="Left"
                        Content="Apply"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>