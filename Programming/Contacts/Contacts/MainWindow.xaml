<Window x:Class="Contacts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Icon="contacts_96x96.ico"
        Title="Contacts" Height="375" Width="500" MinWidth="500" MinHeight="300" Padding="15">
        
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Edit Contact Section -->
        <GroupBox Header="Edit Contact" Grid.Column="0" Margin="0,0,3,0">
            <Grid Margin="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Text="Name:" Grid.Row="0"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Margin="0,0,0,5" HorizontalAlignment="Stretch"/>

                <TextBlock Text="Phone Number:" Grid.Row="2"/>
                <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Margin="0,0,0,5" HorizontalAlignment="Stretch"/>

                <TextBlock Text="Email:" Grid.Row="4"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" Margin="0,0,0,5" VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="18"/>
            </Grid>
        </GroupBox>

        <!-- Read Contact Section -->
        <GroupBox Header="Read Contact" Grid.Column="1" Margin="3,0,0,0">
            <Grid Margin="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Text="Name:"  Grid.Row="0"/>
                <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="0,0,0,5" Grid.Row="1"/>

                <TextBlock Text="Phone Number:" Grid.Row="2"/>
                <TextBlock Text="{Binding PhoneNumber}"  FontWeight="Bold" Margin="0,0,0,5" Grid.Row="3"/>

                <TextBlock Text="Email:" Grid.Row="4"/>
                <TextBlock Text="{Binding Email}" FontWeight="Bold" Margin="0,0,0,5" Grid.Row="5"/>
            </Grid>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,10,0,0">
            <Button Content="Save" Command="{Binding SaveCommand}"  Width="75" Height="25" Margin="0,0,5,0"/>
            <Button Content="Load" Command="{Binding LoadCommand}"  Width="75" Height="25"/>
        </StackPanel>
    </Grid>
</Window>
